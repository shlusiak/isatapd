AC_FUNC_FORK

AC_CHECK_SIZEOF(char,1)
AC_CHECK_SIZEOF(short,2)

AC_MSG_CHECKING(if 1=2)
AC_MSG_RESULT(no)

AC_CONFIG_FILES([Makefile src/Makefile man/Makefile])
AC_OUTPUT
